{{>header}}
{{#each blog}}
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <h2 class="card-title">{{this.title}}
        </h2>
        <img class="card-img-top img-thumbnail" src="{{this.image}}" alt="Card image cap">
        <div class="card-body">
          <p class="card-text">{{this.body}}
          </p>
          <h2 class="date">{{ this.created}}
          </h2>
          <a href="/blogs/{{this.id}}" class="btn btn-dark btn-sm">Read More &rarr;
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}
{{> footer}}
