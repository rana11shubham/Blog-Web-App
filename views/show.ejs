<% include ./partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <h2 class="card-title"><%=blog.title%>
        </h2>
        <img class="card-img-top img-thumbnail" src="<%=blog.image%>" alt="Card image cap">
        <div class="card-body">
          <p class="card-text"><%=blog.body%>
          </p>
          <h4><%=blog.user.username%></h4>
          <h2 class="date"><%=blog.created.toDateString()%>
          </h2>
        </div>
        <%
        if(userl.username===blog.user.username)
        {%>
        <form class="delete" action="/blogs/<%=blog._id%>?_method=DELETE" method="post">
          <button  class="btn btn-dark btn-sm delete">Delete
          </button>
          <a href="/blogs/<%=blog._id%>/edit" class="btn btn-dark btn-sm edit">Edit
          </a>
        </form>
        <%}%>
      </div>
    </div>
  </div>
</div>
